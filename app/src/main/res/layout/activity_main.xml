<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:background="@drawable/background_contact_lr"
    tools:context="com.example.android.myrestaurant.MainActivity">

    <ImageView
        android:id="@+id/imgCaffe"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/caffe"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />

    <EditText
        android:id="@+id/editUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@id/imgCaffe"
        android:hint="User:"
        android:layout_marginTop="30dp"
        />
    <EditText
        android:id="@+id/editPwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:hint="Password:"
        android:layout_below="@id/editUser"
        android:inputType="textPassword"
        />
    <Button
        android:id="@+id/btnLogin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@color/colorLogin"
        android:text="Login"
        android:onClick="clickLogin"
        android:textColor="@color/colorTextLogin"
        android:layout_below="@id/editPwd"
        android:layout_marginTop="30dp"
        />
</RelativeLayout>
